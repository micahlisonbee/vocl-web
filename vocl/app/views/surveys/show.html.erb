<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @survey.name %>
</p>

<ol>
	<% for question in @survey.questions %>
		<li><%=h question.question_text %>
			<ul>
				<% for answer in question.answers %>
					<li><%=h answer.answer_text %>
				<% end %>
			</ul>
		</li>
	<% end %>
</ol>

<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>
